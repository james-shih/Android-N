<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tw.ilink.mathsocks.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/totalTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="of"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="178dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/percentageTxt"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:textSize="30sp"
        tools:layout_editor_absoluteY="111dp"
        tools:layout_editor_absoluteX="300dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="143dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/totalTextView"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/numberTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Number"
        android:inputType="number"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="85dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/percentageTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Percentage"
        android:inputType="number"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="85dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/calcBtn"
        android:layout_width="215dp"
        android:layout_height="43dp"
        android:background="#FFDD2225"
        android:text="CALCULATE"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="85dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/numberTxt" />

</android.support.constraint.ConstraintLayout>
