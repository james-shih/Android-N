<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hero_bg_gradient"
    tools:context="com.example.james.herome.Fragments.PickPowerFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--bad code: because repeat-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="81dp"
            android:background="#283748"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/top_banner_bar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.v7.widget.Toolbar>
        <!--bad code-->

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="PICK A POWER"
            android:textColor="#F3C93B"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <Button
            android:id="@+id/turtleBtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/turtle_power"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Turtle Power"
            android:textColor="#F3C93B"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/lightingBtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/thors_hammer"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Lighting"
            android:textColor="#F3C93B"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@+id/turtleBtn"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/turtleBtn" />

        <Button
            android:id="@+id/flightBtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/super_man_crest"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Flight"
            android:textColor="#F3C93B"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@+id/turtleBtn"
            app:layout_constraintTop_toBottomOf="@+id/lightingBtn" />

        <Button
            android:id="@+id/slightBtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/spider_web"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Web Sliging"
            android:textColor="#F3C93B"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/flightBtn"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/turtleBtn" />

        <Button
            android:id="@+id/laserBtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/laser_vision"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Laser Vision"
            android:textColor="#F3C93B"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/slightBtn"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/turtleBtn" />

        <Button
            android:id="@+id/superBtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/super_strength"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Super Strength"
            android:textColor="#F3C93B"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/laserBtn"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/turtleBtn" />

        <Button
            android:id="@+id/showBtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/hero_solid_button"
            android:backgroundTint="#F3C93B"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="SHOW BACKSTORY"
            android:textColor="#10161D"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/turtleBtn"
            app:layout_constraintTop_toBottomOf="@+id/superBtn" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
